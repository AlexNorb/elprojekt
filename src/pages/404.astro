---
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { pb } from "../utils";
---

<MainLayout
    title="Sidan kunde inte hittas"
    description="404 - Sidan du söker finns inte."
>
    <Navbar />
    <main
        class="min-h-screen flex items-center justify-center bg-slate-50 relative overflow-hidden"
    >
        <!-- Background decoration -->
        <div class="absolute top-0 left-0 w-full h-full overflow-hidden z-0">
            <div
                class="absolute w-[500px] h-[500px] bg-elblue/5 rounded-full mix-blend-multiply filter blur-[100px] -top-24 -right-24"
            >
            </div>
            <div
                class="absolute w-[300px] h-[300px] bg-elorange/5 rounded-full mix-blend-multiply filter blur-[80px] bottom-0 left-0"
            >
            </div>
        </div>

        <div
            class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10 py-20"
        >
            <!-- 404 Number -->
            <div class="mb-8">
                <span
                    class="text-[150px] sm:text-[200px] font-display font-bold text-elblue/10 leading-none select-none"
                >
                    404
                </span>
            </div>

            <!-- Icon -->
            <div class="mb-6 -mt-20">
                <div
                    class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-elblue/10 text-elblue"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-10 w-10"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="1.5"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z"
                        ></path>
                    </svg>
                </div>
            </div>

            <!-- Text -->
            <h1
                class="text-3xl sm:text-4xl font-display font-bold text-slate-900 mb-4"
            >
                Sidan kunde inte hittas
            </h1>
            <p class="text-slate-600 text-lg mb-8 max-w-md mx-auto">
                Oj! Det verkar som att den här sidan har kopplats bort. Kanske
                kan vi hjälpa dig hitta rätt?
            </p>

            <!-- Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href={pb("/")}
                    class="inline-flex items-center justify-center px-8 py-4 text-base font-bold text-white transition-all duration-200 bg-elblue font-display rounded-md hover:bg-elblue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-elblue shadow-[0_4px_14px_0_rgba(0,118,255,0.39)] hover:shadow-[0_6px_20px_rgba(0,118,255,0.23)] hover:-translate-y-1"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 mr-2"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                        ></path>
                    </svg>
                    Till startsidan
                </a>
                <a
                    href={pb("/#contact")}
                    class="inline-flex items-center justify-center px-8 py-4 text-base font-bold text-slate-700 transition-all duration-200 bg-white border border-slate-200 font-display rounded-md hover:bg-slate-50 hover:text-elblue hover:border-elblue/30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-200"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 mr-2"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        ></path>
                    </svg>
                    Kontakta oss
                </a>
            </div>

            <!-- Quick links -->
            <div class="mt-12 pt-8 border-t border-slate-200">
                <p class="text-sm text-slate-500 mb-4">Populära sidor:</p>
                <div class="flex flex-wrap justify-center gap-x-3 gap-y-2">
                    <a
                        href={pb("/tjanster/solceller-energi")}
                        class="text-sm text-elblue hover:text-elorange transition-colors"
                    >
                        Solceller
                    </a>
                    <span class="text-slate-300">•</span>
                    <a
                        href={pb("/tjanster/laddbox-elbil")}
                        class="text-sm text-elblue hover:text-elorange transition-colors"
                    >
                        Laddbox
                    </a>
                    <span class="text-slate-300">•</span>
                    <a
                        href={pb("/tjanster/smarta-hem")}
                        class="text-sm text-elblue hover:text-elorange transition-colors"
                    >
                        Smarta Hem
                    </a>
                    <span class="text-slate-300">•</span>
                    <a
                        href={pb("/tjanster/renovering-nybyggnation")}
                        class="text-sm text-elblue hover:text-elorange transition-colors"
                    >
                        Renovering & Nybyggnation
                    </a>
                    <span class="text-slate-300">•</span>
                    <a
                        href={pb("/tjanster/service-underhall")}
                        class="text-sm text-elblue hover:text-elorange transition-colors"
                    >
                        Service & Underhåll
                    </a>
                    <span class="text-slate-300">•</span>
                    <a
                        href={pb("/projekt")}
                        class="text-sm text-elblue hover:text-elorange transition-colors"
                    >
                        Projekt
                    </a>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</MainLayout>
