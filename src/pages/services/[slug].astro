---
import { services } from "../../data/services";
import MainLayout from "../../layouts/MainLayout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import MobileActionBar from "../../components/MobileActionBar.astro";
import CheckBadgeIcon from "../../components/icons/CheckBadgeIcon.astro";
import ArrowRightIcon from "../../components/icons/ArrowRightIcon.astro";
import ContactForm from "../../components/ContactForm.astro";
import { pb } from "../../utils";

export async function getStaticPaths() {
    return services.map((service) => ({
        params: { slug: service.slug },
        props: { service },
    }));
}

const { service } = Astro.props;
---

<MainLayout title={service.title} description={service.description}>
    <Navbar />

    <div class="pt-20 pb-20 min-h-screen bg-slate-50 animate-fade-in">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            {/* Breadcrumb / Back */}

            <div
                class="bg-white rounded-lg shadow-xl overflow-hidden border border-slate-100"
            >
                {/* Header Image */}
                <div class="relative h-64 md:h-96">
                    <a
                        href={pb("/")}
                        onclick="event.preventDefault(); history.back();"
                        class="absolute top-4 left-4 z-20 inline-flex items-center text-white/90 hover:text-white bg-slate-900/40 hover:bg-slate-900/60 backdrop-blur-sm px-4 py-2 rounded-full transition-all font-bold text-xs uppercase tracking-wider cursor-pointer border border-white/10"
                    >
                        <span class="mr-2">←</span> Tillbaka
                    </a>
                    <img
                        src={service.image ||
                            "https://images.unsplash.com/photo-1581092921461-eab62e97a782?auto=format&fit=crop&q=80"}
                        alt={service.title}
                        class="w-full h-full object-cover"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent"
                    >
                    </div>
                    <div class="absolute bottom-0 left-0 p-8 md:p-12">
                        <div
                            class="inline-flex items-center px-3 py-1 rounded-sm bg-elorange text-white text-xs font-bold uppercase tracking-wider mb-4"
                        >
                            Tjänst
                        </div>
                        <h1
                            class="text-4xl md:text-5xl font-display font-bold text-white mb-2"
                        >
                            {service.title}
                        </h1>
                    </div>
                </div>

                <div
                    class="grid grid-cols-1 lg:grid-cols-3 gap-0 lg:divide-x divide-slate-100"
                >
                    {/* Main Content */}
                    <div class="col-span-2 p-8 md:p-12">
                        <h2
                            class="text-2xl font-bold text-slate-900 mb-6 font-display"
                        >
                            Om tjänsten
                        </h2>
                        <p class="text-lg text-slate-600 leading-relaxed mb-8">
                            {service.longDescription || service.description}
                        </p>

                        <h3
                            class="text-xl font-bold text-slate-900 mb-6 font-display"
                        >
                            Vad vi erbjuder
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {
                                service.features ? (
                                    service.features.map((feature) => (
                                        <div class="flex items-center p-4 bg-slate-50 rounded-md border border-slate-100">
                                            <div class="w-6 h-6 text-elblue mr-3 flex-shrink-0">
                                                <CheckBadgeIcon />
                                            </div>
                                            <span class="font-medium text-slate-700">
                                                {feature}
                                            </span>
                                        </div>
                                    ))
                                ) : (
                                    <p class="text-slate-500">
                                        Kontakta oss för detaljerad
                                        specifikation.
                                    </p>
                                )
                            }
                        </div>

                        {/* Process Steps (if available) - e.g. for Solar */}
                        {
                            service.processSteps && (
                                <div class="mt-12 pt-12 border-t border-slate-100">
                                    <h3 class="text-xl font-bold text-slate-900 mb-6 font-display">
                                        Så går det till
                                    </h3>
                                    <div class="space-y-6">
                                        {service.processSteps.map((step) => (
                                            <div class="flex">
                                                <div class="flex-shrink-0 mr-4">
                                                    <div class="w-10 h-10 rounded-full bg-elblue text-white flex items-center justify-center font-bold font-display shadow-sm">
                                                        {step.step}
                                                    </div>
                                                </div>
                                                <div>
                                                    <h4 class="text-lg font-bold text-slate-900">
                                                        {step.title}
                                                    </h4>
                                                    <p class="text-slate-600 text-sm mt-1 leading-relaxed">
                                                        {step.description}
                                                    </p>
                                                </div>
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            )
                        }
                    </div>

                    {/* Sidebar / CTA */}
                    <div class="col-span-1 p-8 md:p-12 bg-slate-50/50">
                        <div class="sticky top-24">
                            <h3
                                class="text-xl font-bold text-slate-900 mb-2 font-display"
                            >
                                Intresserad?
                            </h3>
                            <p class="text-slate-500 mb-8">
                                Vi hjälper dig från planering till färdig
                                installation. Begär en kostnadsfri offert idag.
                            </p>

                            <div class="space-y-4">
                                <a
                                    href={pb("/#contact")}
                                    class="w-full flex items-center justify-center px-6 py-4 border border-transparent rounded-md shadow-sm text-base font-bold text-white bg-elblue hover:bg-elblue-600 transition-all transform hover:-translate-y-1 block text-center"
                                >
                                    Begär Offert
                                    <div class="ml-2 w-5 h-5 inline-block">
                                        <ArrowRightIcon />
                                    </div>
                                </a>
                                <a
                                    href="tel:081234567"
                                    class="w-full flex items-center justify-center px-6 py-4 border border-slate-300 rounded-md text-base font-bold text-slate-700 bg-white hover:bg-slate-50 transition-all block text-center"
                                >
                                    Ring oss: 08-123 45 67
                                </a>
                            </div>

                            <div
                                class="mt-12 p-6 bg-elblue-50 rounded-lg border border-elblue-100"
                            >
                                <h4 class="font-bold text-elblue mb-2">
                                    ROT-avdrag / Grön Teknik
                                </h4>
                                <p class="text-sm text-elblue-800">
                                    På denna tjänst kan du ofta utnyttja
                                    skatteavdrag på upp till 50% av
                                    arbetskostnaden eller materialet (Grön
                                    Teknik). Vi sköter all administration.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="py-16 bg-white border-t border-slate-100">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2
                class="text-2xl font-bold text-slate-900 text-center mb-8 font-display"
            >
                Har du frågor om {service.title}?
            </h2>
            <div
                class="bg-slate-50 rounded-xl p-6 md:p-10 border border-slate-100 shadow-sm"
            >
                <ContactForm subject={service.title} />
            </div>
        </div>
    </section>

    <MobileActionBar />
    <Footer />
</MainLayout>
