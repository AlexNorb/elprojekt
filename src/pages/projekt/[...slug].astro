---
import MainLayout from "../../layouts/MainLayout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import ArrowLeftIcon from "../../components/icons/ArrowLeftIcon.astro";
import ArrowRightIcon from "../../components/icons/ArrowRightIcon.astro";
import ContactForm from "../../components/ContactForm.astro";

export async function getStaticPaths() {
    const projects = await getCollection("projects");
    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

const { project } = Astro.props;
const { Content } = await project.render();

// Combine cover image and gallery images into a single array for the slider
const images = [
    { src: project.data.coverImage, alt: project.data.coverAlt },
    ...(Array.isArray(project.data.gallery)
        ? project.data.gallery
              .filter((img) => img) // Filter out empty strings
              .map((img) => ({
                  src: img,
                  alt: `Galleri - ${project.data.title}`,
              }))
        : []),
].filter((img) => img.src);

// Helper to check if image is a string (URL) or ImageMetadata
const isUrl = (img: any) => typeof img === "string";

// Helper for capitalization
const capitalize = (str: string) =>
    str.charAt(0).toUpperCase() + str.slice(1).toLowerCase();
---

<MainLayout
    title={`${project.data.title} - Referens`}
    description={project.data.description}
>
    <Navbar />

    <div class="relative pt-24 pb-16 bg-slate-50 min-h-screen">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Top Header Section -->
            <div class="mb-8">
                <!-- Back Link -->
                <div class="mb-2">
                    <a
                        href="/projekt"
                        class="text-elblue hover:text-elorange font-medium inline-flex items-center gap-2"
                    >
                        &larr; Tillbaka till projekt
                    </a>

                    <!-- Client & Date -->
                    <div
                        class="flex flex-wrap justify-center gap-4 text-sm text-elblue"
                    >
                        <span class="font-medium">
                            Kund: {project.data.client}
                        </span>
                        <span class="text-slate-300 hidden sm:inline">•</span>
                        <span class="font-medium">
                            Datum: {
                                project.data.completionDate.toLocaleDateString(
                                    "sv-SE",
                                )
                            }
                        </span>
                    </div>
                </div>

                <!-- Title & Metadata -->
                <div class="space-y-4 text-center max-w-4xl mx-auto">
                    <h1
                        class="text-4xl md:text-5xl font-bold font-display text-slate-900"
                    >
                        {project.data.title}
                    </h1>

                    <div class="flex flex-col items-center gap-4">
                        <!-- Pills -->
                        <div class="flex flex-wrap justify-center gap-2">
                            <span
                                class="px-3 py-1 bg-white rounded border font-display text-xs tracking-widest uppercase text-slate-600 border-slate-200 shadow-sm"
                            >
                                {project.data.serviceType}
                            </span>
                            {
                                project.data.filterCategory &&
                                    project.data.filterCategory.map((cat) => (
                                        <span class="px-3 py-1 bg-white rounded border font-display text-xs tracking-widest uppercase text-slate-600 border-slate-200 shadow-sm">
                                            {cat}
                                        </span>
                                    ))
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid lg:grid-cols-2 lg:gap-16 items-start">
                <!-- Left Column: Gallery Slider -->
                <div class="space-y-6 lg:sticky lg:top-32">
                    <div
                        class="relative aspect-video w-full overflow-hidden rounded-lg shadow-xl bg-slate-200 group"
                        id="slider-container"
                    >
                        {
                            images.map((img, index) => (
                                <div
                                    class={`absolute inset-0 transition-opacity duration-500 ease-in-out ${index === 0 ? "opacity-100 z-10" : "opacity-0 z-0"}`}
                                    data-slide={index}
                                >
                                    {isUrl(img.src) ? (
                                        <img
                                            src={img.src as string}
                                            alt={img.alt}
                                            class="w-full h-full object-cover"
                                        />
                                    ) : (
                                        <Image
                                            src={img.src as any}
                                            alt={img.alt}
                                            class="w-full h-full object-cover"
                                            width={1200}
                                            height={675}
                                        />
                                    )}
                                </div>
                            ))
                        }

                        {/* Navigation Arrows (Only if multiple images) */}
                        {
                            images.length > 1 && (
                                <>
                                    <button
                                        id="prev-slide"
                                        class="absolute left-4 top-1/2 -translate-y-1/2 z-20 bg-white/20 hover:bg-white/40 backdrop-blur-sm text-white p-2 rounded-full transition-all focus:outline-none focus:ring-2 focus:ring-white/50"
                                        aria-label="Föregående bild"
                                    >
                                        <ArrowLeftIcon className="w-5 h-5" />
                                    </button>
                                    <button
                                        id="next-slide"
                                        class="absolute right-4 top-1/2 -translate-y-1/2 z-20 bg-white/20 hover:bg-white/40 backdrop-blur-sm text-white p-2 rounded-full transition-all focus:outline-none focus:ring-2 focus:ring-white/50"
                                        aria-label="Nästa bild"
                                    >
                                        <ArrowRightIcon className="w-5 h-5" />
                                    </button>
                                </>
                            )
                        }
                    </div>

                    {/* Thumbnails */}
                    {
                        images.length > 1 && (
                            <div class="flex gap-4 overflow-x-auto pb-2 scrollbar-hide">
                                {images.map((img, index) => (
                                    <button
                                        class={`relative flex-shrink-0 w-24 h-16 rounded-md overflow-hidden border-2 transition-all ${index === 0 ? "border-elblue ring-2 ring-elblue/20" : "border-transparent opacity-70 hover:opacity-100"}`}
                                        data-thumb={index}
                                        aria-label={`Visa bild ${index + 1}`}
                                    >
                                        {isUrl(img.src) ? (
                                            <img
                                                src={img.src as string}
                                                alt={img.alt}
                                                class="w-full h-full object-cover"
                                            />
                                        ) : (
                                            <Image
                                                src={img.src as any}
                                                alt={img.alt}
                                                class="w-full h-full object-cover"
                                                width={200}
                                                height={150}
                                            />
                                        )}
                                    </button>
                                ))}
                            </div>
                        )
                    }
                </div>

                <!-- Right Column: Content -->
                <div class="mt-12 lg:mt-0">
                    <article
                        class="prose prose-base text-slate-600 font-sans max-w-none prose-headings:font-display prose-headings:font-bold prose-headings:text-slate-900 prose-headings:m-2 prose-p:my-1 prose-li:my-1 prose-a:text-elblue prose-li:marker:text-elorange"
                    >
                        <Content />
                    </article>

                    {
                        project.data.tags && (
                            <div class="mt-6 pt-6 border-t border-slate-200">
                                <div class="flex flex-wrap gap-2">
                                    {project.data.tags.map((tag) => (
                                        <span class="inline-flex items-center px-2 py-1 rounded border font-display text-xs tracking-widest uppercase bg-white text-slate-600 border-slate-200">
                                            {tag}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        )
                    }
                </div>
            </div>
        </div>
    </div>
    <section class="py-16 bg-white border-t border-slate-100">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2
                class="text-2xl font-bold text-slate-900 text-center mb-8 font-display"
            >
                Vill du prata om ett liknande projekt?
            </h2>
            <div
                class="bg-slate-50 rounded-xl p-6 md:p-10 border border-slate-100 shadow-sm"
            >
                <ContactForm />
            </div>
        </div>
    </section>
    <Footer />
</MainLayout>

<script>
    // Slider Logic
    const initSlider = () => {
        const slides = document.querySelectorAll(
            "[data-slide]",
        ) as NodeListOf<HTMLElement>;
        const thumbs = document.querySelectorAll(
            "[data-thumb]",
        ) as NodeListOf<HTMLElement>;
        const prevBtn = document.getElementById("prev-slide");
        const nextBtn = document.getElementById("next-slide");
        let currentIndex = 0;
        const totalSlides = slides.length;

        if (totalSlides === 0) return;

        const showSlide = (index: number) => {
            // Handle wrap-around
            if (index < 0) index = totalSlides - 1;
            if (index >= totalSlides) index = 0;

            currentIndex = index;

            // Update Slides
            slides.forEach((slide, i) => {
                if (i === currentIndex) {
                    slide.classList.remove("opacity-0", "z-0");
                    slide.classList.add("opacity-100", "z-10");
                } else {
                    slide.classList.remove("opacity-100", "z-10");
                    slide.classList.add("opacity-0", "z-0");
                }
            });

            // Update Thumbs (if they exist)
            if (thumbs.length > 0) {
                thumbs.forEach((thumb, i) => {
                    if (i === currentIndex) {
                        thumb.classList.remove(
                            "border-transparent",
                            "opacity-70",
                        );
                        thumb.classList.add(
                            "border-elblue",
                            "ring-2",
                            "ring-elblue/20",
                        );
                    } else {
                        thumb.classList.add("border-transparent", "opacity-70");
                        thumb.classList.remove(
                            "border-elblue",
                            "ring-2",
                            "ring-elblue/20",
                        );
                    }
                });
            }
        };

        // Event Listeners
        if (prevBtn) {
            prevBtn.addEventListener("click", () =>
                showSlide(currentIndex - 1),
            );
        }
        if (nextBtn) {
            nextBtn.addEventListener("click", () =>
                showSlide(currentIndex + 1),
            );
        }

        thumbs.forEach((thumb, index) => {
            thumb.addEventListener("click", () => showSlide(index));
        });
    };

    // Run on init and view transitions
    initSlider();
    document.addEventListener("astro:page-load", initSlider);
</script>
