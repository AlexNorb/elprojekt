---
import MainLayout from './MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SubPageHero from '../components/SubPageHero.astro';

interface Props {
  title: string;
  heroImage: string;
  heroTitle: string;
  heroSubtitle: string;
  category: string;
}

const { title, heroImage, heroTitle, heroSubtitle, category } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<MainLayout title={title}>
  <Header />

  <!-- CUSTOM SERVICE HERO WITH MENU -->
  <header class="relative h-[60vh] min-h-[500px] bg-brand-dark overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img src={heroImage} alt={heroTitle} class="w-full h-full object-cover opacity-20">
      <div class="absolute inset-0 bg-gradient-to-r from-brand-dark via-brand-dark/80 to-transparent"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full h-full flex items-center">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-center">
        
        <!-- LEFT: Title & Subtitle -->
        <div class="lg:col-span-2">
          <h1 class="text-4xl md:text-6xl font-display font-bold text-white mb-6 leading-tight animate-fade-in-up" set:html={heroTitle}></h1>
          <p class="text-xl text-slate-300 leading-relaxed max-w-2xl animate-fade-in-up border-l-4 border-brand-accent pl-6" style="animation-delay: 0.1s;">
            {heroSubtitle}
          </p>
        </div>

        <!-- RIGHT: Service Menu -->
        <div class="lg:col-span-1">
          <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-lg shadow-xl p-4 w-full">
            <h4 class="text-brand-accent font-display font-bold text-sm uppercase tracking-widest mb-3">Våra Tjänster</h4>
            <nav class="space-y-1">
              <a href={base + "tjanster/solceller"} class={`block px-4 py-2 rounded font-medium text-sm transition ${Astro.url.pathname.includes('solceller') ? 'bg-brand-accent text-white' : 'text-white/80 hover:bg-white/10 hover:text-white'}`}>
                Solceller & Energi
              </a>
              <a href={base + "tjanster/service"} class={`block px-4 py-2 rounded font-medium text-sm transition ${Astro.url.pathname.includes('service') ? 'bg-brand-accent text-white' : 'text-white/80 hover:bg-white/10 hover:text-white'}`}>
                Service & Underhåll
              </a>
              <a href={base + "tjanster/smarta-hem"} class={`block px-4 py-2 rounded font-medium text-sm transition ${Astro.url.pathname.includes('smarta-hem') ? 'bg-brand-accent text-white' : 'text-white/80 hover:bg-white/10 hover:text-white'}`}>
                Smarta Hem
              </a>
              <a href={base + "tjanster/laddboxar"} class={`block px-4 py-2 rounded font-medium text-sm transition ${Astro.url.pathname.includes('laddboxar') ? 'bg-brand-accent text-white' : 'text-white/80 hover:bg-white/10 hover:text-white'}`}>
                Laddboxar
              </a>
              <a href={base + "tjanster/belysning"} class={`block px-4 py-2 rounded font-medium text-sm transition ${Astro.url.pathname.includes('belysning') ? 'bg-brand-accent text-white' : 'text-white/80 hover:bg-white/10 hover:text-white'}`}>
                Belysning
              </a>
              <a href={base + "tjanster/entreprenad"} class={`block px-4 py-2 rounded font-medium text-sm transition ${Astro.url.pathname.includes('entreprenad') ? 'bg-brand-accent text-white' : 'text-white/80 hover:bg-white/10 hover:text-white'}`}>
                Entreprenad
              </a>
            </nav>
          </div>
        </div>

      </div>
    </div>
  </header>

  <!-- HUVUDINNEHÅLL -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <slot />
      </div>
    </div>
  </section>

  <!-- KONTAKT FORMULÄR -->
  <section id="kontakt-form" class="py-16 bg-brand-gray border-t border-slate-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-slate-900 mb-2 font-display">Intresserad av {category}?</h2>
      <p class="text-slate-600 mb-8">Fyll i dina uppgifter så kontaktar vi dig.</p>
      
      <form class="bg-white p-8 rounded shadow-lg text-left grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="md:col-span-2">
          <label class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-1">Namn</label>
          <input type="text" class="block w-full rounded border-slate-200 bg-slate-50 focus:border-brand-accent focus:ring-brand-accent/20 p-3 text-sm">
        </div>
        <div>
          <label class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-1">Telefon</label>
          <input type="tel" class="block w-full rounded border-slate-200 bg-slate-50 focus:border-brand-accent focus:ring-brand-accent/20 p-3 text-sm">
        </div>
        <div>
          <label class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-1">E-post</label>
          <input type="email" class="block w-full rounded border-slate-200 bg-slate-50 focus:border-brand-accent focus:ring-brand-accent/20 p-3 text-sm">
        </div>
        <div class="md:col-span-2">
          <label class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-1">Meddelande</label>
          <textarea rows="3" class="block w-full rounded border-slate-200 bg-slate-50 focus:border-brand-accent focus:ring-brand-accent/20 p-3 text-sm"></textarea>
        </div>
        <div class="md:col-span-2">
          <button type="submit" class="w-full btn-accent text-white font-display font-bold py-4 rounded shadow-lg tracking-widest uppercase text-sm">
            SKICKA FÖRFRÅGAN
          </button>
        </div>
      </form>
    </div>
  </section>

  <Footer />
</MainLayout>
