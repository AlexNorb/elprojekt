---
interface Props {
  title: string;
  subtitle: string;
  image: string;
  label?: string;
}

const { title, subtitle, image, label } = Astro.props;
---

<!-- SUB-PAGE HERO -->
<header class="relative h-[50vh] min-h-[400px] flex items-center bg-brand-dark overflow-hidden">
  <div class="absolute inset-0 z-0">
    <img src={image} alt={title} class="w-full h-full object-cover opacity-20">
    <div class="absolute inset-0 bg-gradient-to-r from-brand-dark via-brand-dark/80 to-transparent"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
    <div class="max-w-3xl">
      {label && (
        <div class="flex items-center space-x-4 mb-6 animate-fade-in-up">
          <div class="w-12 h-1 bg-brand-accent"></div>
          <span class="text-brand-accent font-bold uppercase tracking-widest text-sm">{label}</span>
        </div>
      )}
      <h1 class="text-4xl md:text-6xl font-display font-bold text-white mb-6 leading-tight animate-fade-in-up" style="animation-delay: 0.1s;" set:html={title}></h1>
      <p class="text-xl text-slate-300 leading-relaxed max-w-2xl animate-fade-in-up" style="animation-delay: 0.2s;">
        {subtitle}
      </p>
    </div>
  </div>
</header>
