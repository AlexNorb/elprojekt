---
import LogoTitle from "./icons/LogoTitle.astro";
import { pb } from "../utils";
---

<footer
    class="bg-slate-900 text-white pt-12 pb-28 md:pb-8 border-t border-slate-800"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 mb-10 text-center sm:text-left"
        >
            <!-- Logo & Service Areas -->
            <div>
                <div class="mb-5 flex justify-center sm:justify-start">
                    <LogoTitle
                        className="w-full max-w-[200px] h-auto"
                        light={true}
                    />
                </div>
                <p class="text-slate-400 text-sm leading-relaxed mb-4">
                    Din lokala elektriker. Moderna lösningar, personlig service.
                </p>
                <div class="text-xs text-slate-500">
                    <span class="font-medium text-slate-400"
                        >Serviceområden:</span
                    ><br />
                    Tjörn • Orust • Stenungsund<br class="sm:hidden" />
                    <span class="hidden sm:inline"> • </span>Uddevalla • Kungälv
                </div>
            </div>

            <!-- Företaget -->
            <div>
                <h4 class="font-display font-bold text-lg mb-4">Företaget</h4>
                <div class="space-y-1 text-slate-400 text-sm">
                    <p class="text-white font-medium">
                        Elprojekt i Uddevalla AB
                    </p>
                    <p>Org.nr 559557-0895</p>
                    <p>Friggavägen 6</p>
                    <p>451 76 Uddevalla</p>
                </div>
            </div>

            <!-- Kontakt -->
            <div>
                <h4 class="font-display font-bold text-lg mb-4">Kontakt</h4>
                <div class="space-y-2 text-sm">
                    <a
                        href="tel:+46703325655"
                        class="flex items-center justify-center sm:justify-start gap-2 text-white font-medium hover:text-elorange transition-colors group"
                    >
                        <i
                            class="fa-solid fa-phone text-xs text-slate-500 group-hover:text-elorange transition-colors"
                        ></i>
                        070-332 56 55
                    </a>
                    <a
                        href="mailto:alex@elprojekt.nu"
                        class="flex items-center justify-center sm:justify-start gap-2 text-slate-400 hover:text-elorange transition-colors group"
                    >
                        <i
                            class="fa-solid fa-envelope text-xs text-slate-500 group-hover:text-elorange transition-colors"
                        ></i>
                        alex@elprojekt.nu
                    </a>
                </div>

                <!-- Social Links -->
                <div
                    class="flex items-center justify-center sm:justify-start gap-3 mt-6"
                >
                    <a
                        href="https://www.facebook.com/elprojekt.nu"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Facebook"
                        class="w-9 h-9 bg-slate-800 rounded-md flex items-center justify-center hover:bg-[#1877F2] text-slate-400 hover:text-white cursor-pointer transition-all duration-200"
                    >
                        <i class="fa-brands fa-facebook-f text-sm"></i>
                    </a>
                    <a
                        href="https://www.instagram.com/elprojektnu"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Instagram"
                        class="w-9 h-9 bg-slate-800 rounded-md flex items-center justify-center hover:bg-gradient-to-br hover:from-[#833AB4] hover:via-[#FD1D1D] hover:to-[#F77737] text-slate-400 hover:text-white cursor-pointer transition-all duration-200"
                    >
                        <i class="fa-brands fa-instagram text-sm"></i>
                    </a>
                    <a
                        href="https://g.page/r/CZaiX2q-GJRhEBM/review"
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label="Google Reviews"
                        class="w-9 h-9 bg-slate-800 rounded-md flex items-center justify-center hover:bg-[#FBBC05] text-slate-400 hover:text-white cursor-pointer transition-all duration-200"
                    >
                        <i class="fa-solid fa-star text-sm"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-slate-800 pt-6">
            <p class="text-slate-500 text-xs text-center">
                &copy; {new Date().getFullYear()} Elprojekt i Uddevalla AB. Alla rättigheter
                reserverade.
            </p>
        </div>
    </div>
</footer>
