---
import LogoTitle from "./icons/LogoTitle.astro";
import { pb } from "../utils";
---

<footer class="bg-slate-900 text-white pt-16 pb-8 border-t border-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
            <div class="col-span-1 md:col-span-1">
                <div class="mb-6">
                    <LogoTitle
                        className="w-full max-w-[260px] h-auto"
                        light={true}
                    />
                </div>
                <p class="text-slate-400 text-sm leading-relaxed mb-4">
                    Din lokala elektriker för framtidssäkra elinstallationer.
                </p>
                <div class="text-xs text-slate-500 font-mono">
                    Verksamma i:<br />
                    Tjörn • Orust • Stenungsund • Uddevalla • Kungälv
                </div>
            </div>

            <div>
                <h4 class="font-display font-bold text-lg mb-4">Tjänster</h4>
                <ul class="space-y-2 text-slate-400 text-sm">
                    <li>
                        <a
                            href={pb("/#services")}
                            class="hover:text-elorange transition-colors"
                            >Smarta Hem & Plejd</a
                        >
                    </li>
                    <li>
                        <a
                            href={pb("/#services")}
                            class="hover:text-elorange transition-colors"
                            >Laddbox (Zaptec/Easee)</a
                        >
                    </li>
                    <li>
                        <a
                            href={pb("/#services")}
                            class="hover:text-elorange transition-colors"
                            >Renovering Kök & Badrum</a
                        >
                    </li>
                    <li>
                        <a
                            href={pb("/#services")}
                            class="hover:text-elorange transition-colors"
                            >Byte av Elcentral</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <h4 class="font-display font-bold text-lg mb-4">Företag</h4>
                <ul class="space-y-2 text-slate-400 text-sm">
                    <li>
                        <a
                            href={pb("/#about")}
                            class="hover:text-elorange transition-colors"
                            >Om oss</a
                        >
                    </li>
                    <li>
                        <a
                            href={pb("/#contact")}
                            class="hover:text-elorange transition-colors"
                            >Karriär</a
                        >
                    </li>
                    <li>
                        <a
                            href={pb("/#contact")}
                            class="hover:text-elorange transition-colors"
                            >Integritetspolicy</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <h4 class="font-display font-bold text-lg mb-4">Kontakt</h4>
                <ul class="space-y-2 text-slate-400 text-sm">
                    <li>Storgatan 12</li>
                    <li>111 22 Stockholm</li>
                    <li class="pt-2 text-white font-medium">08-123 45 67</li>
                    <li>info@elprojekt.se</li>
                </ul>
            </div>
        </div>

        <div
            class="border-t border-slate-800 pt-8 flex flex-col md:flex-row justify-between items-center"
        >
            <p class="text-slate-500 text-xs">
                &copy; {new Date().getFullYear()} ELPROJEKT AB. Alla rättigheter reserverade.
            </p>
            <div class="mt-4 md:mt-0 flex space-x-4">
                {/* Social placeholders */}
                <div
                    class="w-8 h-8 bg-slate-800 rounded-md flex items-center justify-center hover:bg-elblue cursor-pointer transition-colors"
                >
                    <span class="font-display font-bold text-xs">Fb</span>
                </div>
                <div
                    class="w-8 h-8 bg-slate-800 rounded-md flex items-center justify-center hover:bg-elblue cursor-pointer transition-colors"
                >
                    <span class="font-display font-bold text-xs">In</span>
                </div>
            </div>
        </div>
    </div>
</footer>
