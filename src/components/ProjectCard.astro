---
interface Props {
  title: string;
  category: string;
  image: string;
  filterCategory: string;
  description: string;
  images: string[];
}

const { title, category, image, filterCategory, description, images } = Astro.props;

const projectData = JSON.stringify({
  title,
  category,
  desc: description,
  images
});
---

<div class="project-card group relative overflow-hidden bg-brand-primary rounded-sm h-72 cursor-pointer" 
     data-category={filterCategory}
     data-project={projectData}>
    <img src={image} alt={title} class="w-full h-full object-cover opacity-80 group-hover:opacity-40 transition duration-700 transform group-hover:scale-105">
    <div class="absolute inset-0 p-8 flex flex-col justify-end">
        <div class="transform translate-y-4 group-hover:translate-y-0 transition duration-500">
            <div class="w-8 h-1 bg-brand-accent mb-4 opacity-0 group-hover:opacity-100 transition duration-500 delay-100"></div>
            <span class="text-white/80 text-[10px] font-bold uppercase tracking-widest mb-1 block">{category.split(',')[0]}</span>
            <h4 class="text-white text-xl font-bold mb-2">{title}</h4>
            <p class="text-white/90 text-xs opacity-0 group-hover:opacity-100 transition duration-500">{category}</p>
        </div>
    </div>
</div>
