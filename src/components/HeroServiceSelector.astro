---
import { pb } from "../utils";
import BoltIcon from "./icons/BoltIcon.astro";
import BatteryIcon from "./icons/BatteryIcon.astro";
import HomeModernIcon from "./icons/HomeModernIcon.astro";
import CpuChipIcon from "./icons/CpuChipIcon.astro";
import ArrowRightIcon from "./icons/ArrowRightIcon.astro";

const quickLinks = [
    {
        icon: BatteryIcon,
        label: "Laddbox",
        href: pb("/services/laddbox-elbil"),
        color: "bg-green-500",
    },
    {
        icon: HomeModernIcon,
        label: "Smarta Hem",
        href: pb("/services/smarta-hem"),
        color: "bg-blue-500",
    },
    {
        icon: BoltIcon,
        label: "Solceller",
        href: pb("/services/solceller-energi"),
        color: "bg-yellow-500",
    },
    {
        icon: CpuChipIcon,
        label: "Service",
        href: pb("/services/service-underhall"),
        color: "bg-red-500",
    },
];
---

<div
    class="relative rounded-xl bg-white/5 border border-white/10 backdrop-blur-md overflow-hidden animate-fade-in-up md:max-w-md w-full mx-auto lg:ml-auto lg:mx-0"
    style="animation-delay: 0.8s; animation-fill-mode: forwards"
>
    {/* Header Section */}
    <div class="p-6 border-b border-white/5">
        <h3 class="text-white font-display text-xl font-bold mb-1">
            Vad kan vi hjälpa dig med?
        </h3>
        <p class="text-slate-400 text-sm">
            Välj tjänst för att läsa mer eller begära offert.
        </p>
    </div>

    {/* Services Grid */}
    <div class="grid grid-cols-2 gap-px bg-white/5">
        {
            quickLinks.map((item) => (
                <a
                    href={item.href}
                    class="group relative flex flex-col items-center justify-center p-6 bg-slate-900/50 hover:bg-slate-800/80 transition-all duration-300 border-white/5"
                >
                    <div
                        class={`w-12 h-12 rounded-full mb-3 flex items-center justify-center text-white shadow-lg group-hover:scale-110 transition-transform duration-300 ${item.color}`}
                    >
                        <item.icon className="w-6 h-6" />
                    </div>
                    <span class="text-slate-200 text-sm font-medium font-display group-hover:text-white transition-colors">
                        {item.label}
                    </span>

                    {/* Hover Arrow */}
                    <div class="absolute top-3 right-3 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 text-slate-400">
                        <ArrowRightIcon className="w-4 h-4" />
                    </div>
                </a>
            ))
        }
    </div>

    {/* Bottom CTA Area - Future AI Input Placeholder */}
    <div class="p-4 bg-slate-900/80 border-t border-white/5">
        <a
            href={pb("/#contact")}
            class="block w-full py-3 px-4 rounded-lg bg-white/5 border border-white/10 text-center text-sm font-medium text-slate-300 hover:bg-white/10 hover:text-white transition-all duration-200"
        >
            Osäker? <span class="text-elorange">Kontakta oss direkt</span>
        </a>
    </div>
</div>
