---
import { pb } from "../utils";

const services = [
    {
        title: "Solceller",
        icon: "sun",
        href: "/tjanster/solceller",
    },
    {
        title: "Laddboxar",
        icon: "lightning",
        href: "/tjanster/laddboxar",
    },
    {
        title: "Elinstallation",
        icon: "plug",
        href: "/tjanster",
    },
    {
        title: "Smarta Hem",
        icon: "wifi",
        href: "/tjanster",
    },
    {
        title: "Belysning",
        icon: "bulb",
        href: "/tjanster",
    },
    {
        title: "Jour",
        icon: "phone",
        href: "/#contact",
    },
];
---

<div
    class="grid grid-cols-3 lg:grid-cols-2 gap-2 sm:gap-3 max-w-xl lg:max-w-xs mx-auto lg:ml-auto lg:mr-0"
>
    {
        services.map((service) => (
            <a
                href={pb(service.href)}
                class="group flex flex-col items-center justify-center p-2 sm:p-5 rounded-xl bg-white/50 backdrop-blur-sm border border-slate-200 transition-all duration-300 hover:scale-[1.02] hover:shadow-lg hover:bg-white hover:text-elblue hover:border-elblue/30 text-center"
            >
                <div class="mb-2 text-slate-700 group-hover:text-elblue transition-colors">
                    {service.icon === "sun" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6 sm:w-7 sm:h-7"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
                            />
                        </svg>
                    )}
                    {service.icon === "lightning" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6 sm:w-7 sm:h-7"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                            />
                        </svg>
                    )}
                    {service.icon === "plug" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6 sm:w-7 sm:h-7"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z"
                            />
                        </svg>
                    )}
                    {service.icon === "wifi" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6 sm:w-7 sm:h-7"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M8.288 15.038a5.25 5.25 0 017.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 011.06 0z"
                            />
                        </svg>
                    )}
                    {service.icon === "bulb" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6 sm:w-7 sm:h-7"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.854 1.591-2.106a6.002 6.002 0 003.88-5.836V8.14a6.002 6.002 0 00-6-6h-.75a6.002 6.002 0 00-6 6v1.725a6.002 6.002 0 003.879 5.836c.934.253 1.591 1.124 1.591 2.107V18a2.25 2.25 0 002.25 2.25h.75A2.25 2.25 0 0014.25 18z"
                            />
                        </svg>
                    )}
                    {service.icon === "phone" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="w-6 h-6 sm:w-7 sm:h-7"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                            />
                        </svg>
                    )}
                </div>
                <span class="text-xs sm:text-sm font-medium text-slate-700 group-hover:text-elblue transition-colors">
                    {service.title}
                </span>
            </a>
        ))
    }
</div>
